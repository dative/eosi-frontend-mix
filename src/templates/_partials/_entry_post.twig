{% if
  entry is defined
    and entry
    and entry.date is defined
    and entry.date
    and entry.title is defined
    and entry.title
    and entry.description is defined
    and entry.description
    and entry.btnText is defined
    and entry.btnText
    and entry.btnLink is defined
    and entry.btnLink %}
  <div class="pt-8 border-b border-gray-300 first:pt-0">
    <p class="text-base leading-[19px] py-2 text-gray-700 font-semibold">
      <time datetime="{{ entry.date }}">{{ entry.date }}</time>
    </p>
    <a href="{{ entry.btnLink }}">
      <h4 class="text-blue-700 h3">
        {{ entry.title }}
      </h4>
    </a>
    <p class="leading-8 text-gray-700 p">
      {{ entry.description }}
    </p>
    <a href="{{ entry.btnLink }}"
      class="btn-outline px-8 py-4 border-blue-700 hover:bg-white mt-[30px] mb-12">
      <span class="text-lg font-semibold leading-[21px] text-blue-700">
        {{ entry.btnText }}
      </span>
    </a>
  </div>
{% endif %}
