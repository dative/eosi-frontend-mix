{% if
  heading is defined
  and heading
  and description is defined
  and description
 %}
	<div class="flex flex-col redactor divide-y divide-gray-300 gap-[2px]">
    <h4>{{ heading }}</h4>
    <a href="#" class="flex flex-col gap-[15px]">
      <picture class="mt-6">
        <img src={{ coverPicture|default("https://placeholder.pics/svg/276x188") }} alt="" class='w-full rounded-t-md'>
      </picture>
      <span class="text-lg leading-[22px] text-blue-700">{{description}}</span>
    </a>
  </div>
{% endif %}
