{% if fullName is defined and fullName and description is defined and description %}
  <div class='flex flex-col sm:flex-row lg:items-center gap-[30px]'>
    <picture>
      {% if profilePicture is defined and profilePicture %}
        <img src={{ profilePicture|default('https://placeholder.pics/svg/348x342px') }} class='rounded-lg max-w-none'/>
      {% endif %}
    </picture>
    <div class='flex flex-col gap-2 redactor'>
      <h4>{{ fullName }}</h4>
      <p class="text-gray-700">{{ description }}</p>
    </div>
  </div>
{% endif %}
