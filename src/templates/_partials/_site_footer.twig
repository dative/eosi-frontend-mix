<footer id="site-footer">
  <div class="bg-blue-900">
    <div class="text-white flex flex-col gap-[60px] p-[30px] mx-auto max-w-screen-desktop">
      <div>
        <a href="/">{% include '_partials/_logo.svg.twig' %}</a>
      </div>

      <div class="flex flex-col gap-[30px] lg:gap-y-[60px] lg:flex-row lg:flex-wrap">
        <div class="flex-1">
          <div class="flex flex-col gap-8 lg:flex-row">
            {% for nav in [
              {
                title: 'Resources',
                links: [
                  { text: 'SDS & Technical Documents', url: '/sds-form.html' },
                  { text: 'Case Studies', url: '/case-studies.html' },
                  { text: 'FAQS', url: '/faqs.html' }
                ]
              },
              {
                title: 'About Us',
                links: [
                  { text: 'Our Company', url: '/company.html' },
                  { text: 'News & Press', url: '/news.html' },
                  { text: 'Careers', url: '/careers.html' }
                ]
              },
              {
                title: 'Contact',
                links: [
                  { text: '866-642-7621 ', url: 'tel:+18666427621 ' },
                  { text: 'info@microc.com', url: 'mailto:info@microc.com' },
                  { text: 'Send us a Message', url: '#' }
                ]
              }
            ] %}
              <div class="flex-1 divide-y-2 divide-blue-700">
                <div class="h4">
                  {{ nav.title }}
                </div>
                <div class="flex flex-col mt-2">
                  {% for link in nav.links %}
                    <a class="pt-4" href="{{ link.url }}">{{ link.text }}</a>
                  {% endfor %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="lg:w-full lg:order-last">
          <div class="flex flex-col gap-3 lg:flex-row">
            {% for nav in [
              { text: 'Privacy Policy' },
              { text: 'Accessibility Statement' },
              { text: 'Website by Dative' }
            ] %}
              <a href="#" class="text-sm text-blue-300">{{ nav.text }}</a>
            {% endfor %}
          </div>
        </div>

        <div>
          <div class="flex flex-col items-center mt-[50px] lg:mt-auto">
            <img src="/img/axius_logo.png" alt="axius" class="max-w-[276px]" />
            <div class="mt-3 text-sm">
              <span>
                An <a href="#" class="text-blue-300">Axius Water</a> Company
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
