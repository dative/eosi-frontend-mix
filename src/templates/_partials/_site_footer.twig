<footer id="site-footer">
  <div class="bg-blue-900">
    <div class="mx-auto max-w-screen-desktop">
      <div class="flex flex-col text-white py-[30px] px-[15px] gap-[30px]">
        <div class="flex flex-col gap-[30px] md:flex-row md:justify-between md:items-end">
          <div class="flex flex-col items-center justify-center gap-6">
            <a href="/">
              <svg class="transition-[width,height] w-[295px] h-[85px] desktop:w-[360px] desktop:h-[103px]">
                <use href="#eosi-logo" />
              </svg>
            </a>

            <div class="text-base text-center text-blue-300">
              <a href="#">53 Portside Drive Pocasset, MA</a><br />
              <a href="tel:+18666427621">866-642-7621</a> &bull;
              <a href="mailto:info@microc.com">info@microc.com</a>
            </div>

            <div class="flex flex-row gap-6 lg:mx-auto">
              <a href="#">
                <svg class="w-[40px] aspect-1">
                  <use href="#svg-icon-linkedin" />
                </svg>
              </a>
            </div>
          </div>

          {% for nav in [
            {
              title: 'Resources',
              links: [
                { text: 'SDS & Technical Documents', url: '/sds-form.html' },
                { text: 'Case Studies', url: '/case-studies.html' },
                { text: 'FAQS', url: '/faqs.html' }
              ]
            },
            {
              title: 'About Us',
              links: [
                { text: 'Our Company', url: '/company.html' },
                { text: 'News & Press', url: '/news.html' },
                { text: 'Careers', url: '/careers.html' }
              ]
            }
          ] %}
            <div class="flex-1 md:max-w-[390px]">
              <div class="divide-y-2 divide-blue-700">
                <div class="pb-2 h4">
                  {{ nav.title }}
                </div>
                <div class="flex flex-col gap-4 pt-4">
                  {% for link in nav.links %}
                    <a href="{{ link.url }}">{{ link.text }}</a>
                  {% endfor %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <a href="#" class="flex flex-col items-center mt-[30px]">
          <img src="/img/axius_logo.png"
            alt="axius"
            class="max-w-[160px] sm:max-w-[170px]" />
          <p class="text-[10px] leading-[20px]">
            An <span class="text-[#90AAD4]">Axius Water</span> Company
          </p>
        </a>

        <div class="flex flex-row flex-wrap items-center justify-center gap-3">
          {% for url in [
            { text: 'Privacy Policy', link: '#' },
            { text: 'Accessibility Statement', link: '#' },
            { text: 'Website by Dative', link: 'https://hellodative.com/' }
          ] %}
            <a href="{{ url.link }}"
              class="text-[14px] leading-[22px] text-blue-300">
              {{ url.text }}
            </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</footer>
