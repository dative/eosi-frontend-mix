{% if
  date is defined
  and date
  and title is defined
  and title
  and link is defined
  and link %}
  <div class="flex flex-col gap-2 border-b border-gray-300 last:border-none">
    <div>
      <time class='text-base leading-[19px] text-gray-700 font-semibold' 
        datetime="{{ date }}">
        {{ date }}
      </time>
    </div>
    
    <h4>
      <a href="{{ link }}" class='text-blue-700 h3'>
        {{ title }}
      </a>
    </h4>

    {% if description is defined and description %}
      <p class="leading-8 text-gray-700 p">
        {{ description }}
      </p>
    {% endif %}
    <footer>
      <a href="{{ link }}"
        class="btn-outline-blue py-[15px] mt-[30px] mb-[38px]">
        Learn More
      </a>
    </footer>
  </div>
{% endif %}
