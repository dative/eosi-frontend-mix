{% if heading is defined and heading and content is defined and content %}
  <div>
    <div class="flex flex-col gap-6">
      <div class="h-1 rounded-full {{ borderColor|default(
          'bg-gray-500'
        ) }}"></div>
      <div>
        <h3 class="h3">
          {{ heading }}
        </h3>
        <div class="mt-2 text-lg leading-[26px] font-normal text-gray-700">
          {{ content }}
        </div>
      </div>
      {% if url is defined and url %}
        <footer>
          <a href="{{ url }}"
            class="py-3 btn-outline-blue text-lg leading-[21.15px]">
            Product Details
          </a>
        </footer>
      {% endif %}
    </div>
  </div>
{% endif %}
