{% if
  field is defined
  and field
  and field.type is defined
  and field.type == 'textarea' %}
  <label for={{ field.name }} class="flex flex-col gap-[3px]">
    {% if field.label is defined and field.label %}
      <span class="font-semibold text-base leading-[19px]">{{ field.label }}</span>
    {% endif %}
    <textarea 
    name="{{ field.name }}"
    id="{{ field.name }}"
    rows='4'
    {{ field.required ? 'required' : '' }}
    {{ field.disabled ? 'disabled' : '' }}
    class="block bg-white rounded border-gray-300 p-[9px] w-full 
    disabled:bg-gray-100 disabled:border-gray-300">{{ field.value }}</textarea>
  </label>
{% endif %}