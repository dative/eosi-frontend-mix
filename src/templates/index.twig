{% extends '_layouts/_generic_page_layout.twig' %}

{% block content %}
  <section>
    <footer id="site-footer">
      <div class="text-white bg-blue-900 flex flex-col p-[15px]">
        <div class="py-[30px] ml-[15px]">
          {% include '_partials/_logo.svg.twig' %}
        </div>
        <div class="flex flex-col lg:flex-row">
          <div class="flex flex-col lg:flex-row">
            {% for n in [
              {
                title: 'Resources',
                items: [
                  { content: 'SDS & Technical Documents' },
                  { content: 'Case Studies' },
                  { content: 'FAQS' }
                ]
              },
              {
                title: 'About Us',
                items: [
                  { content: 'Our Company' },
                  { content: 'News & Press' },
                  { content: 'Careers' }
                ]
              },
              {
                title: 'Contact',
                items: [
                  { content: 'Message Us', link: '#' },
                  { content: 'Case Studies', link: '#' },
                  { content: 'FAQS', link: '#' }
                ]
              }
            ] %}
              <div class="divide-y-2 divide-blue-700 mt-[30px] lg:w-[230px] narrow:w-[300px] desktop:w-[340px] px-4">
                <div class="h4">
                  {{ n.title }}
                </div>
                <div class="flex flex-col mt-2">
                  <a class="pt-4" href="{{ n.items[0].link }}">
                    {{ n.items[0].content }}
                  </a>
                  <a class="pt-4" href="{{ n.items[1].link }}">
                    {{ n.items[1].content }}
                  </a>
                  <a class="pt-4" href="{{ n.items[2].link }}">
                    {{ n.items[2].content }}
                  </a>
                </div>
              </div>
            {% endfor %}
          </div>

          {# need to discuss that #}
          <div class="flex flex-col px-4 mt-6 lg:hidden">
            {% for c in [
              { content: 'Privacy Policy' },
              { content: 'Accessibility Statement' },
              { content: 'Website by Dative' }
            ] %}
              <a href="#" class="py-[6px] text-sm text-blue-300">
                {{ c.content }}
              </a>
            {% endfor %}
          </div>
          <div class="flex flex-col items-center mt-[50px] justify-end w-full">
            <img src="/img/axius_logo.png" alt="axius" class="max-w-[276px]" />

            <div class="mt-3 text-sm">
              <span>
                An <a href="#" class="text-blue-300">Axius Water</a> Company
              </span>
            </div>
          </div>
        </div>
        <div class="hidden mt-[30px] py-[30px] lg:flex">
          {% for c in [
            { content: 'Privacy Policy' },
            { content: 'Accessibility Statement' },
            { content: 'Website by Dative' }
          ] %}
            <a href="#" class="py-[6px] ml-3 text-sm text-blue-300">
              {{ c.content }}
            </a>
          {% endfor %}
        </div>
      </div>
    </footer>
  </section>
{% endblock %}
